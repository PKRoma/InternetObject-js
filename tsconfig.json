{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "stripInternal": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "declarationDir": "lib",
    "declarationMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "typeAcquisition": {
    "enable": true,
    "include": ["jest"]
  }
}
